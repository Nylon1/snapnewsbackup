<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>SnapNews Video Feed (Last 24 Hours)</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <style>
    body {
      font-family: 'Segoe UI', Arial, sans-serif;
      background: #11141a;
      color: #fff;
      margin: 0;
      min-height: 100vh;
      display: flex;
      flex-direction: column;
    }
    .topbar {
      width: 100%;
      background: #191e2c;
      padding: 1rem 0;
      display: flex;
      align-items: center;
      justify-content: space-between;
      box-shadow: 0 2px 10px #0003;
    }
    .topbar .home-link {
      color: #ffd900;
      text-decoration: none;
      font-size: 1.15rem;
      font-weight: bold;
      margin-left: 2rem;
      transition: color 0.15s;
    }
    .topbar .home-link:hover {
      color: #fff;
    }
    .topbar .logo {
      font-size: 1.3rem;
      color: #ffd900;
      font-weight: bold;
      letter-spacing: 1.5px;
      margin-right: 2rem;
    }
    h1 {
      text-align: center;
      margin: 2rem 0 1rem 0;
      color: #ffd900;
      letter-spacing: 2px;
      font-size: 2.2rem;
      text-shadow: 0 2px 16px #000, 0 0 10px #ffd90022;
    }
    #feed {
      display: flex;
      flex-wrap: wrap;
      gap: 2.5rem;
      justify-content: center;
      margin: 1.5rem auto 2rem auto;
      max-width: 1600px;
      width: 100%;
    }
    .video-card {
      background: #181d26;
      border-radius: 2rem;
      padding: 1.5rem 1.25rem 1.25rem 1.25rem;
      width: 370px;
      box-shadow: 0 0 32px 2px #ffd90066, 0 4px 32px 12px #ffd90022, 0 1px 8px 1px #000a;
      border: 2px solid #232b3c;
      position: relative;
      transition: 
        box-shadow 0.3s cubic-bezier(.4,2.2,.3,1), 
        border 0.2s,
        transform 0.2s;
      display: flex;
      flex-direction: column;
      align-items: center;
      animation: cardGlow 2.5s infinite alternate;
    }
    @keyframes cardGlow {
      0% {
        box-shadow: 0 0 28px 2px #ffd90033, 0 4px 24px 8px #ffd90011, 0 1px 8px 1px #000c;
      }
      100% {
        box-shadow: 0 0 50px 8px #ffd90099, 0 8px 32px 16px #ffd90033, 0 2px 10px 2px #000b;
      }
    }
    .video-card:hover {
      box-shadow: 0 0 80px 20px #ffd900cc, 0 2px 32px 8px #ffd90044, 0 1px 8px 1px #000;
      border: 2px solid #ffd900;
      transform: translateY(-6px) scale(1.04);
      z-index: 2;
    }
    .title {
      font-weight: bold;
      font-size: 1.18rem;
      margin-bottom: 0.6rem;
      color: #ffd900;
      text-shadow: 0 1px 8px #000;
      text-align: center;
      word-break: break-all;
    }
    .date {
      color: #b9b9b9;
      font-size: 0.97rem;
      margin-bottom: 0.7rem;
      text-align: center;
    }
    .time-remaining {
      color: #ffd900;
      font-size: 1rem;
      margin-bottom: 0.9rem;
      text-align: center;
      font-family: 'Segoe UI', Arial, sans-serif;
      font-weight: 600;
      letter-spacing: 0.5px;
    }
    video, img {
      width: 100%;
      border-radius: 1.3rem;
      outline: none;
      background: #11141a;
      box-shadow: 0 0 14px 1px #000c;
      margin-bottom: 0.6rem;
    }
    .card-actions {
      display: flex;
      gap: 1rem;
      justify-content: center;
      align-items: center;
      width: 100%;
      margin-top: 0.4rem;
    }
    .share-btn {
      display: flex;
      align-items: center;
      gap: 0.4em;
      border: none;
      background: #ffd900;
      color: #181d26;
      font-weight: 600;
      border-radius: 999px;
      padding: 0.45em 1.1em;
      font-size: 1rem;
      cursor: pointer;
      transition: background 0.16s, color 0.16s, box-shadow 0.18s;
      box-shadow: 0 1px 8px 1px #ffd90044;
      outline: none;
      margin-bottom: 0.2rem;
    }
    .share-btn:active, .share-btn.copied {
      background: #fff26e;
      color: #232b3c;
      box-shadow: 0 2px 16px 2px #ffd90099;
    }
    .copied-message {
      color: #ffd900;
      font-size: 0.99em;
      margin-left: 0.6em;
      transition: opacity 0.19s;
    }
    .fallback {
      color: #ffd900;
      font-size: 1rem;
      text-align: center;
      margin-top: 1rem;
    }
    footer {
      margin-top: auto;
      background: #191e2c;
      color: #ffd900;
      padding: 1.4rem 0 0.7rem 0;
      text-align: center;
      letter-spacing: 1px;
      font-size: 1.06rem;
      box-shadow: 0 -2px 16px #0003;
      border-radius: 1.2rem 1.2rem 0 0;
      width: 100%;
    }
    @media (max-width: 950px) {
      #feed { gap: 1rem; }
      .video-card { width: 98vw; max-width: 410px; padding: 1rem 0.5rem; }
    }
    @media (max-width: 600px) {
      #feed { flex-direction: column; gap: 1.2rem; }
      .video-card { width: 96vw; max-width: none; }
      .topbar .logo, .topbar .home-link { margin: 0 1rem; font-size: 1rem;}
      h1 { font-size: 1.1rem; }
    }
  </style>
</head>
<body>
  <div class="topbar">
    <a href="/" class="home-link">&larr; Home</a>
    <div class="logo">SnapNews</div>
  </div>
  <h1>Video Feed (Last 24 Hours)</h1>
  <div id="feed">
    <% if (error) { %>
      <p><%= error %></p>
    <% } else if (!videos.length) { %>
      <p>No videos from the last 24 hours.</p>
    <% } else { %>
      <% videos.forEach(function(video, idx) { %>
        <div class="video-card" data-date="<%= video.add_date %>" id="card-<%= idx %>">
          <div class="title"><%= video.title || "Untitled" %></div>
          <div class="date">
            Uploaded: <%= new Date(video.add_date).toLocaleString() %>
          </div>
          <div class="time-remaining" id="timer-<%= idx %>"></div>
          <% if (video.file) { %>
            <video src="<%= video.file %>" controls poster="<%= video.thumbnail_url.startsWith('http') ? video.thumbnail_url : ('https://mediacms-cw-u46015.vm.elestio.app' + video.thumbnail_url) %>"></video>
          <% } else { %>
            <a href="<%= video.url %>" target="_blank">
              <img src="<%= video.thumbnail_url.startsWith('http') ? video.thumbnail_url : ('https://mediacms-cw-u46015.vm.elestio.app' + video.thumbnail_url) %>" alt="Thumbnail">
            </a>
            <div class="fallback">Direct video unavailable.<br>
              <a href="<%= video.url %>" style="color:#ffd900;" target="_blank">Watch on SnapNews</a>
            </div>
          <% } %>
          <div class="card-actions">
            <button class="share-btn" data-url="<%= video.url %>" data-idx="<%= idx %>">
              &#128279; Share
            </button>
            <span class="copied-message" id="copied-<%= idx %>" style="opacity:0;">Copied!</span>
          </div>
        </div>
      <% }); %>
    <% } %>
  </div>
  <footer>
    &copy; <%= new Date().getFullYear() %> SnapNews &middot; All rights reserved.
  </footer>
  <script>
    // Timer for time-remaining
    function updateTimers() {
      document.querySelectorAll('.video-card').forEach(function(card, idx) {
        var dateStr = card.getAttribute('data-date');
        var created = new Date(dateStr);
        var now = new Date();
        var msElapsed = now - created;
        var msLeft = 24*60*60*1000 - msElapsed;
        var timer = document.getElementById('timer-' + idx);
        if (msLeft > 0) {
          var h = Math.floor(msLeft / (1000 * 60 * 60));
          var m = Math.floor((msLeft % (1000 * 60 * 60)) / (1000 * 60));
          var s = Math.floor((msLeft % (1000 * 60)) / 1000);
          timer.textContent = "Expires in: " + 
            (h < 10 ? "0" : "") + h + ":" + 
            (m < 10 ? "0" : "") + m + ":" +
            (s < 10 ? "0" : "") + s;
        } else {
          timer.textContent = "Expired";
        }
      });
    }
    setInterval(updateTimers, 1000);
    updateTimers();

    // Share button
    document.querySelectorAll('.share-btn').forEach(function(btn) {
      btn.addEventListener('click', function() {
        var url = btn.getAttribute('data-url');
        navigator.clipboard.writeText(url).then(function() {
          var idx = btn.getAttribute('data-idx');
          var msg = document.getElementById('copied-' + idx);
          msg.style.opacity = 1;
          setTimeout(function() { msg.style.opacity = 0; }, 1800);
        });
      });
    });
  </script>
</body>
</html>
