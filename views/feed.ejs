<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>SnapNews Feed - Last 24 Hours</title>
  <style>
    body {
      font-family: 'Segoe UI', Arial, sans-serif;
      background: #11141a;
      color: #fff;
      margin: 0;
      min-height: 100vh;
    }
    h1 {
      text-align: center;
      margin-top: 2rem;
      color: #ffd900;
      letter-spacing: 2px;
      font-size: 2.2rem;
      text-shadow: 0 2px 16px #000, 0 0 10px #ffd90022;
    }
    #feed {
      display: flex;
      flex-wrap: wrap;
      gap: 2.5rem;
      justify-content: center;
      margin: 2.5rem auto;
      max-width: 1500px;
    }
    .video-card {
      background: #191e2c;
      border-radius: 2rem;
      padding: 1.5rem 1.25rem;
      box-shadow: 0 2px 32px 6px #ffd90022, 0 1px 8px 1px #000c;
      transition: box-shadow 0.2s, border 0.2s;
      width: 370px;
      border: 2px solid transparent;
      display: flex;
      flex-direction: column;
      align-items: center;
      position: relative;
    }
    .video-card:hover {
      box-shadow: 0 4px 32px 12px #ffd90099, 0 2px 16px 2px #000a;
      border: 2px solid #ffd900;
      cursor: pointer;
    }
    .title {
      font-weight: bold;
      font-size: 1.18rem;
      margin-bottom: 0.6rem;
      color: #ffd900;
      text-shadow: 0 1px 6px #000;
      text-align: center;
    }
    .date {
      color: #b9b9b9;
      font-size: 0.97rem;
      margin-bottom: 1.1rem;
      text-align: center;
    }
    video {
      width: 100%;
      border-radius: 1.3rem;
      outline: none;
      background: #11141a;
      box-shadow: 0 0 14px 1px #000c;
      margin-bottom: 0.6rem;
    }
    @media (max-width: 700px) {
      #feed { gap: 1rem; }
      .video-card { width: 98vw; padding: 1rem 0.5rem; }
      h1 { font-size: 1.3rem; }
    }
  </style>
</head>
<body>
  <h1>SnapNews Video Feed (Last 24 Hours)</h1>
  <div id="feed">
    <% if (error) { %>
      <p><%= error %></p>
    <% } else if (!videos.length) { %>
      <p>No videos from the last 24 hours.</p>
    <% } else { %>
      <% videos.forEach(function(video) { %>
        <div class="video-card">
          <div class="title"><%= video.title || "Untitled" %></div>
          <div class="date">Uploaded: <%= new Date(video.created_at).toLocaleString() %></div>
          <video src="<%= video.file %>" controls <%= video.thumbnail ? 'poster="' + video.thumbnail + '"' : '' %>></video>
        </div>
      <% }); %>
    <% } %>
  </div>
</body>
</html>
