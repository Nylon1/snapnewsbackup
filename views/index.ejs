  <script src="https://cdn.tailwindcss.com"></script>
  <style>
    body { font-family: 'Segoe UI', sans-serif; }
    @keyframes bgGlow {
      0% { filter: brightness(1) hue-rotate(0deg); }
      100% { filter: brightness(1.15) hue-rotate(20deg); }
    }
    .glow-trending {
      box-shadow: 0 0 24px 0 #ffbb0080, 0 2px 12px #0005;
      animation: glowTrending 2s infinite alternate;
    }
    @keyframes glowTrending {
      0% { box-shadow: 0 0 16px 0 #ffbb0055, 0 2px 12px #0005; }
      60% { box-shadow: 0 0 40px 0 #ffbb00cc, 0 2px 20px #ffbb0022, 0 2px 20px #0005; }
      100% { box-shadow: 0 0 16px 0 #ffbb00aa, 0 2px 12px #0005; }
    }
    .glow-snapper {
      box-shadow: 0 0 24px 0 #ff53b880, 0 2px 12px #0005;
      animation: glowSnapper 2.2s infinite alternate;
    }
    @keyframes glowSnapper {
      0% { box-shadow: 0 0 16px 0 #ff53b855, 0 2px 12px #0005; }
      60% { box-shadow: 0 0 40px 0 #ff53b8cc, 0 2px 20px #ff53b822, 0 2px 20px #0005; }
      100% { box-shadow: 0 0 16px 0 #ff53b8aa, 0 2px 12px #0005; }
    }
    @keyframes fadein { from { opacity: 0; transform: translateY(-10px);} to { opacity: 1; transform: none;}}
    .animate-fadein { animation: fadein 0.18s; }
    .drop-shadow-glow {
      text-shadow: 0 0 8px #FFD600, 0 0 24px #FFD600, 0 0 32px #FFD600;
    }
  </style>
</head>
<body class="bg-black text-white min-h-screen flex flex-col relative">
  <div class="fixed top-0 left-0 w-full h-full z-0 pointer-events-none"
       style="background: radial-gradient(circle at center, #1f1f1f 0%, #000 100%); background-size: cover; animation: bgGlow 15s ease-in-out infinite alternate;"></div>

  <button onclick="toggleGlow()" class="fixed top-4 left-4 z-50 bg-[#232b3c] text-yellow-400 px-4 py-2 rounded-full text-sm hover:bg-yellow-600 hover:text-black transition">
    Toggle Glow
  </button>

  <audio id="bg-sound" loop autoplay muted>
    <source src="/sounds/ambient-loop.mp3" type="audio/mpeg">
  </audio>
  <button onclick="toggleSound()" class="fixed top-4 right-4 z-50 bg-[#232b3c] text-yellow-400 px-4 py-2 rounded-full text-sm hover:bg-yellow-600 hover:text-black transition">
    Toggle Sound
  </button>
  <script>
    function toggleGlow() {
      document.body.classList.toggle('bg-black');
      document.body.classList.toggle('bg-[#0c0c0c]');
    }
    const sound = document.getElementById('bg-sound');
    function toggleSound() {
      sound.muted = !sound.muted;
    }
  </script>

  <div class="absolute top-6 right-8 z-50 group flex flex-col items-end">
    <button id="userMenuBtn" class="bg-[#232b3c] hover:bg-yellow-400/20 p-2 rounded-full shadow transition flex items-center focus:outline-none">
      <svg width="32" height="32" fill="none" viewBox="0 0 32 32">
        <circle cx="16" cy="12" r="7" fill="#aaa"/>
        <ellipse cx="16" cy="24" rx="10" ry="6" fill="#aaa"/>
      </svg>
    </button>
    <div id="userMenuDropdown" class="hidden mt-2 w-36 bg-[#232b3c] text-white rounded-xl shadow-lg border border-gray-700 py-2 flex flex-col animate-fadein">
      <a href="/login" class="px-5 py-2 hover:bg-yellow-400/20 transition text-left">Snap In</a>
      <a href="/signup" class="px-5 py-2 hover:bg-yellow-400/20 transition text-left">Snap Up</a>
    </div>
  </div>
  <script>
    const btn = document.getElementById('userMenuBtn');
    const dropdown = document.getElementById('userMenuDropdown');
    document.addEventListener('click', (e) => {
      if (btn.contains(e.target)) {
        dropdown.classList.toggle('hidden');
      } else if (!dropdown.contains(e.target)) {
        dropdown.classList.add('hidden');
      }
    });
  </script>

  <header class="w-full py-8 flex flex-col items-center z-10">
    <span class="text-6xl mb-2 animate-pulse drop-shadow-glow">ðŸ”¥</span>
    <h1 class="text-4xl sm:text-5xl font-extrabold text-yellow-400 mb-2 drop-shadow-glow">SnapShnap</h1>
    <p class="text-gray-300 text-base sm:text-lg max-w-md text-center mb-4">
      Share in 60 seconds. Self-destructs in 24 hours. News, Travel & Food.
    </p>
    <div class="flex flex-col sm:flex-row justify-center items-center gap-4">
      <a href="/upload" class="relative overflow-hidden px-6 py-3 rounded-full text-sm sm:text-base font-bold text-yellow-400 border border-yellow-500 hover:text-black hover:bg-yellow-400 transition-all duration-300 shadow-[0_0_10px_#FFD700,0_0_20px_#FFD70033]">
        Upload a Video
      </a>
      <a href="/feed" class="backdrop-blur-sm bg-white/5 hover:bg-white/10 border border-white/20 shadow-lg rounded-full px-6 py-3 text-white text-sm sm:text-base">
        Watch Snaps
      </a>
    </div>
  </header>

  <main class="flex-1 w-full flex justify-center z-10">
    <div class="w-full max-w-4xl px-3 flex flex-col md:flex-row gap-8 items-start mx-auto">
      <section class="flex-1 w-full flex flex-col items-center md:items-start">
        <div class="bg-[#232b3c] rounded-2xl p-6 shadow-lg w-full max-w-xs mx-auto glow-trending">
          <div class="text-yellow-400 text-xl font-semibold flex items-center gap-2 mb-4">
            <span>ðŸ”¥</span> Trending Now
          </div>
          <div class="bg-[#343c4d] rounded-lg p-3 mb-2 flex flex-col items-start">
            <div class="w-32 h-20 bg-[#232a3c] rounded mb-2"></div>
            <div class="text-white text-base font-medium">Funny Dog Jump <span class="text-yellow-400">#pets</span></div>
          </div>
        </div>
      </section>
      <section class="flex-1 w-full flex flex-col items-center md:items-end">
        <div class="bg-[#181e29] rounded-2xl p-8 shadow-lg w-full max-w-xs mx-auto glow-snapper">
          <div class="text-pink-400 text-xl font-semibold mb-4 flex items-center gap-2 justify-center">
            <span>ðŸŒŸ</span> Snapper of the Week
          </div>
          <div class="flex flex-col items-center">
            <div class="w-24 h-24 rounded-full border-4 border-pink-400 flex items-center justify-center text-2xl text-yellow-400 mb-3 bg-[#232b3c]">
              S
            </div>
            <div class="font-bold text-lg mb-1 text-white">@SnapQueen</div>
            <div class="text-gray-300 text-center text-base">Uploaded the most loved Snap of the week ðŸŽ‰</div>
          </div>
        </div>
      </section>
    </div>
  </main>

  <div id="a2hs-banner" class="fixed bottom-6 left-0 right-0 flex justify-center z-50" style="display: none;">
    <button id="installBtn" onclick="installApp()" class="flex items-center gap-3 px-8 py-4 rounded-full bg-black text-yellow-400 font-bold text-lg shadow-xl border-4 border-yellow-400 transition hover:scale-105 hover:bg-yellow-600 hover:text-black relative" style="box-shadow: 0 0 36px 8px #FFD600, 0 4px 32px rgba(0,0,0,0.20); border-width: 4px;">
      <svg width="30" height="30" viewBox="0 0 24 24" fill="none" stroke="#FFD600" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
        <path d="M8 17v-3a4 4 0 0 1 8 0v3" />
        <polyline points="16 13 12 17 8 13" />
        <line x1="12" y1="17" x2="12" y2="9" />
        <path d="M20.39 18.39A5 5 0 0 0 18 9h-1.26A8 8 0 1 0 4 16.3" />
      </svg>
      <span class="tracking-wide drop-shadow-glow">Download Web App</span>
    </button>
  </div>
  <script>
    let deferredPrompt;
    window.addEventListener('beforeinstallprompt', (e) => {
      e.preventDefault();
      deferredPrompt = e;
      document.getElementById('a2hs-banner').style.display = 'flex';
    });
    function installApp() {
      if (deferredPrompt) {
        deferredPrompt.prompt();
        deferredPrompt.userChoice.then(() => {
          deferredPrompt = null;
          document.getElementById('a2hs-banner').style.display = 'none';
        });
      }
    }
  </script>

