<!DOCTYPE html>
<html lang="en">
<head>
  <title>Sign Up</title>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <script src="https://cdn.tailwindcss.com"></script>

  <style>
    body { font-family: 'Segoe UI', sans-serif; }

    .glow-animate {
      box-shadow:
        0 0 32px 0 #ffd50088,
        0 2px 16px #000a;
      animation: snapanimate 2.2s ease-in-out infinite alternate;
    }

    @keyframes snapanimate {
      0% {
        box-shadow:
          0 0 32px 0 #ffd50055,
          0 2px 16px #000a;
      }
      55% {
        box-shadow:
          0 0 50px 0 #ffd500aa,
          0 2px 24px #ffd50033,
          0 2px 24px #000a;
      }
      100% {
        box-shadow:
          0 0 32px 0 #ffd500dd,
          0 2px 16px #ffd50055,
          0 2px 16px #000a;
      }
    }
  </style>
</head>

<body class="bg-black text-white min-h-screen flex items-center justify-center px-2">
  <div class="bg-[#181e29] w-full max-w-md p-5 sm:p-8 rounded-2xl shadow-lg glow-animate">

    <h2 class="text-2xl font-bold text-yellow-400 mb-1 text-center">Sign Up</h2>
    <p class="mb-6 text-center text-gray-400">Create your account</p>

    <!-- FORM REPLACED WITH REDIRECT HANDLER -->
    <form id="signupForm" class="flex flex-col gap-4">
      <input type="text" placeholder="Username"
        class="py-2 px-3 rounded bg-gray-800 placeholder-gray-400
        focus:outline-none focus:ring-2 focus:ring-yellow-400" required />

      <input type="email" placeholder="Email"
        class="py-2 px-3 rounded bg-gray-800 placeholder-gray-400
        focus:outline-none focus:ring-2 focus:ring-yellow-400" required />

      <input type="password" placeholder="Password"
        class="py-2 px-3 rounded bg-gray-800 placeholder-gray-400
        focus:outline-none focus:ring-2 focus:ring-yellow-400" required />

      <button type="submit"
        class="bg-yellow-400 text-black font-semibold py-2 rounded-lg
        hover:bg-yellow-300 transition text-lg">
        Sign Up
      </button>
    </form>

    <div class="mt-4 text-center">
      <a id="loginLink" href="#" class="text-gray-400 hover:text-yellow-400 text-sm">
        Already have an account? Log In
      </a>
    </div>

    <div class="mt-6 text-center">
      <a href="/" class="text-yellow-400 hover:underline text-xs">&larr; Back to Home</a>
    </div>
  </div>

  <script>
    const MEDIA_BASE = "https://media.snapshnap.com";

    // Redirect Signup → MediaCMS
    document.getElementById("signupForm").addEventListener("submit", (e) => {
      e.preventDefault();
      window.location.href = `${MEDIA_BASE}/accounts/signup/`;
    });

    // Redirect Login → MediaCMS Login
    document.getElementById("loginLink").addEventListener("click", (e) => {
      e.preventDefault();
      window.location.href = `${MEDIA_BASE}/accounts/login/`;
    });
  </script>

</body>
</html>
